<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLogin">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2mm">

            <androidx.cardview.widget.CardView
                android:id="@+id/OVAL_right"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:cardCornerRadius="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="120dp"
                android:elevation="5dp"
                android:layout_marginTop="-50dp">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@color/Main_elements_2"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/OVAL_left"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="336dp"
                android:layout_marginTop="-20dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Main_elements_2"/>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Main_background"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10mm">

            <TextView
                android:id="@+id/id_te"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/image_logotupe"
                android:text="Добро пожаловать в nUmeMessenger"
                android:layout_marginTop="-20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:elevation="50mm"/>

            <ImageView
                android:id="@+id/image_logotupe"
                android:layout_width="186dp"
                android:layout_height="186dp"
                android:layout_marginTop="170dp"
                android:src="@drawable/logotype"
                app:layout_constraintLeft_toLeftOf="@id/id_te"
                app:layout_constraintRight_toRightOf="@id/id_te"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/number_or_email_card"
                android:layout_width="272dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@+id/image_logotupe"
                app:layout_constraintLeft_toLeftOf="@+id/image_logotupe"
                app:layout_constraintRight_toRightOf="@+id/image_logotupe"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/Main_elements"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/number_or_email"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="236dp"
                        android:layout_height="wrap_content"
                        android:hint="Телефон или email"
                        android:inputType="textEmailAddress"
                        android:layout_margin="8dp"
                        android:background="@color/Main_elements"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/error_number_or_email"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/number_or_email_card"
                app:layout_constraintRight_toRightOf="@+id/number_or_email_card"
                app:layout_constraintTop_toBottomOf="@+id/number_or_email_card"
                android:textColor="@color/Error_color"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/password_card"
                android:layout_width="272dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@+id/error_number_or_email"
                app:layout_constraintLeft_toLeftOf="@+id/image_logotupe"
                app:layout_constraintRight_toRightOf="@+id/image_logotupe"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/Main_elements" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/password"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="236dp"
                        android:layout_height="wrap_content"
                        android:hint="Пароль"
                        android:inputType="textPassword"
                        android:layout_margin="8dp"
                        android:background="@color/Main_elements"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/error_password"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/number_or_email_card"
                app:layout_constraintRight_toRightOf="@+id/number_or_email_card"
                app:layout_constraintTop_toBottomOf="@+id/password_card"
                android:textColor="@color/Error_color"/>

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/error_password"
                app:layout_constraintRight_toRightOf="@+id/error_password"
                app:layout_constraintTop_toBottomOf="@+id/password_card"
                app:layout_constraintBottom_toTopOf="@+id/id_card_2"
                android:textColor="@color/Main_text_header"
                android:text="Забыли пароль?"
                android:textSize="16dp"
                android:clickable="true"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/id_card_2"
                android:layout_width="252dp"
                android:layout_height="55dp"
                app:layout_constraintLeft_toLeftOf="@+id/password_card"
                app:layout_constraintRight_toRightOf="@+id/password_card"
                app:layout_constraintTop_toBottomOf="@+id/error_password"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="46dp">

                <ImageView
                    android:id="@+id/button_registration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Main_elements_2"
                    android:clickable="true"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="Войти"
                        android:textColor="@color/Main_text_basic"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/error_server"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/id_card_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="5dp"
                android:textColor="@color/Error_color"/>

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/error_server"
                android:id="@+id/link_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Еще нет аккаунта?"
                android:textSize="16dp"
                app:layout_constraintRight_toLeftOf="@+id/link_registration"
                app:layout_constraintLeft_toLeftOf="@id/id_card_2"/>

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/error_server"
                android:id="@+id/link_registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Main_elements_2"
                android:text="Зарегистрироваться."
                android:textSize="16dp"
                app:layout_constraintRight_toRightOf="@id/id_card_2"
                app:layout_constraintLeft_toRightOf="@+id/link_text"
                android:clickable="true"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>