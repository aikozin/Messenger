<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLogin">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Main_background"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="48dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_image_logotype"
                android:layout_width="256dp"
                android:layout_height="256dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:cardCornerRadius="24dp">

                <ImageView
                    android:id="@+id/image_logotupe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logotype"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Main_text_header_hi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cardview_image_logotype"
                app:layout_constraintLeft_toLeftOf="@+id/cardview_image_logotype"
                app:layout_constraintRight_toRightOf="@+id/cardview_image_logotype"
                android:layout_marginTop="16dp"
                android:text="Приветствуем вас!"
                android:textColor="@color/Main_text_header"
                android:textSize="28dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/Main_text_basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/Main_text_header_hi"
                app:layout_constraintLeft_toLeftOf="@+id/cardview_image_logotype"
                android:text="Введите ваши данные:"
                android:textColor="@color/Main_text_basic"
                android:textSize="20dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/number_or_email_card"
                android:layout_width="272dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@+id/Main_text_basic"
                app:layout_constraintLeft_toLeftOf="@+id/cardview_image_logotype"
                app:layout_constraintRight_toRightOf="@+id/cardview_image_logotype"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/Main_elements"/>

                <EditText
                    android:id="@+id/number_or_email"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:hint="Телефон или электронная почта"
                    android:text="+71234567890"
                    android:inputType="textEmailAddress"
                    android:layout_margin="8dp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/error_number_or_email"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/number_or_email_card"
                app:layout_constraintRight_toRightOf="@+id/number_or_email_card"
                app:layout_constraintTop_toBottomOf="@+id/number_or_email_card"
                android:textColor="@color/Error_color"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/password_card"
                android:layout_width="272dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@+id/error_number_or_email"
                app:layout_constraintLeft_toLeftOf="@+id/cardview_image_logotype"
                app:layout_constraintRight_toRightOf="@+id/cardview_image_logotype"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/Main_elements"/>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:hint="Пароль"
                    android:text="Password!#$"
                    android:inputType="textPassword"
                    android:layout_margin="8dp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/error_password"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/number_or_email_card"
                app:layout_constraintRight_toRightOf="@+id/number_or_email_card"
                app:layout_constraintTop_toBottomOf="@+id/password_card"
                android:textColor="@color/Error_color"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/id_card_2"
                android:layout_width="256dp"
                android:layout_height="48dp"
                app:layout_constraintLeft_toLeftOf="@+id/password_card"
                app:layout_constraintRight_toRightOf="@+id/password_card"
                app:layout_constraintTop_toBottomOf="@+id/error_password"
                app:cardCornerRadius="16dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/button_registration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Main_elements"
                    android:clickable="true"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="Выполнить"
                        android:textColor="@color/Main_text_basic"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/error_server"
                android:layout_width="356dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/id_card_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="15dp"
                android:textColor="@color/Error_color"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>